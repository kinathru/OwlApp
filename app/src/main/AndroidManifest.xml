<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.score.owl">

    <application
        android:allowBackup="true"
        android:icon="@drawable/owl"
        android:label="@string/app_name">

        <activity
            android:name="com.score.owl.ui.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.score.owl.ui.RegisterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!--
            todo add login activity here
        -->

        <activity
            android:name="com.score.owl.ui.ContactListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <activity
            android:name="com.score.owl.ui.NewContactActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <activity
            android:name="com.score.owl.ui.ViewContactActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
    </application>

</manifest>
