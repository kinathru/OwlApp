<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient android:angle="270" android:endColor="#FF666666" android:startColor="#FF666666" />

            <stroke android:width="2dip" android:color="#4a4a4a" />
            <corners android:radius="5dp" />

        </shape>

    </item>

    <item android:state_focused="false" android:state_pressed="false">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient android:angle="270" android:endColor="#333333" android:startColor="#333333" />

            <stroke android:width="2dip" android:color="#4a4a4a" />

            <corners android:radius="5dp" />

        </shape>

    </item>
</selector>
